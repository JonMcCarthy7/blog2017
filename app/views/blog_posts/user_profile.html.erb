
<h1><%= @user.username %>'s Page</h1>
<div class="">
  <p><strong>Name: </strong> <%=@user.name %></p>
  <p><strong>Location: </strong> <%=@user.location %></p>
  <p><strong>Birthday: </strong> <%=@user.birthday.strftime("%m/%d/%Y") %></p>
</div>


<% @user.blog_posts.each do |blog_post| %>
  <div class="col-md-12">
    <div class="panel panel-success">
      <%= link_to blog_post.title, blog_post%>
    </div>
    <div class="panel-body">
      <p><span class= "posted-at"><%= blog_post.created_at.strftime('%m/%d/%Y at %l:%M%p') %></span></p>
      <p><%= blog_post.blog_entry[0..150] %>...[<%= link_to "Read More", blog_post] %></p>
    </div>
    <div class="panel-footer">
      <%= link_to 'Show', blog_post, class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-info" %>
      <%= link_to 'Destroy', blog_posts, method: :delete, date: { confirm: 'Are you sure?'}, class: "btn btn-danger"%>
    </div>
  </div>
</div>
<%end%>
